{
	"pluginAlias": "HttpGarageDoors",
	"pluginType": "platform",
	"singular": true,
	"headerDisplay": "The HTTP Garage Doors plugin enables you to send HTTP requests to any API, facilitating the automation of devices such as garage doors. For instance, if your parking entrance is activated via a phone call, you can configure the Telnyx API to dial a specific number with just a single API request. Additionally, you can set custom timings for your gates to receive accurate status updates, such as OPENING, OPEN, CLOSING, and CLOSED.",
	"footerDisplay": "Enhance your driving experience by using this plugin to add a garage door control button directly to your CarPlay screen.",
	"schema": {
		"type": "object",
		"required": ["name", "simulateTimeOpening", "simulateTimeOpen", "simulateTimeClosing", "closeAfter"],
		"properties": {
			"name": {
				"title": "Name",
				"type": "string",
				"default": "Garage Door"
			},
			"simulateTimeOpening": {
				"title": "Door opening time",
				"type": "number",
				"default": 13
			},
			"simulateTimeOpen": {
				"title": "Door open time",
				"type": "number",
				"default": 15
			},
			"simulateTimeClosing": {
				"title": "Door closing time",
				"type": "number",
				"default": 12
			},
			"closeAfter": {
				"title": "Close gates after",
				"type": "number",
				"default": 28
			},
			"request": {
				"type": "object",
				"properties": {
					"url": {
						"title": "Open URL",
						"type": "string"
					},
					"method": {
						"title": "Method",
						"type": "string",
						"default": "POST",
						"enum": ["GET", "POST"]
					},
					"type": {
						"title": "Type",
						"type": "string",
						"default": "JSON",
						"enum": ["JSON", "FORM"]
					},
					"headers": {
						"type": "object",
						"title": "Headers",
						"additionalProperties": {
							"type": "string"
						}
					},
					"params": {
						"type": "object",
						"title": "Parameters",
						"additionalProperties": {
							"type": "string"
						}
					}
				}
			},
			"debug": {
				"title": "Debug log",
				"type": "boolean"
			}
		}
	},
	"layout": [
		{ "key": "name" },
		{
			"type": "flex",
			"flex-flow": "row wrap",
			"items": [
				"simulateTimeOpening",
				"simulateTimeOpen",
				"simulateTimeClosing",
				"closeAfter"
			]
		},
		{ "key": "request.url", "placeholder": "Request" },
		{
			"type": "flex",
			"flex-flow": "row wrap",
			"items": ["request.method", "request.type"]
		},
		{ "key": "request.headers" },
		{ "key": "request.params" },
		{ "key": "debug" }
	]
}